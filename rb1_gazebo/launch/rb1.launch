<?xml version="1.0"?>
<launch>

  <arg name="debug" default="false" />
  <arg name="gui" default="true" />
  <arg name="prefix" default="rb1_" />

  <!-- Load the URDF into the ROS Parameter Server -->
  <param name="robot_description" command="$(find xacro)/xacro.py '$(find rb1_description)/robots/rb1_robot_mico_3fg.urdf.xacro' prefix:=$(arg prefix) --inorder" />

  <!-- rb1_control launch file -->
  <include file="$(find rb1_control)/launch/rb1_control.launch" />

  <!-- rb1_base_joystick launch file -->
  <include file="$(find rb1_base_pad)/launch/rb1_base_pad.launch" />
  
  <remap from="/rb1/mobile_base_controller/cmd_vel" to="/rb1/cmd_vel" />

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find rb1_gazebo)/worlds/rb1.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="headless" value="false"/>
  </include>
         
  <!-- Call a python script to the run a service call to gazebo_ros to spawn a URDF robot -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -model rb1 -param robot_description"/>

</launch>
